<resources>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="CardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/main_photo_tint</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DetailsBackgroundPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/background_photo_tint</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DetailsHeaderPhoto">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:tint">@color/main_photo_tint</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DetailsTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
    </style>

    <style name="DetailsTextDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:text">@string/lorem</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
    </style>

</resources>
